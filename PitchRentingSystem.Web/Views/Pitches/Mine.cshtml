@model AllPitchesViewModel

@{
    ViewBag.Title = "My Pitches";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
    @foreach(var pitch in Model.Pitches)
    {
        <div class="card col-6">
            <img class="card-img-top" src="@pitch.ImageUrl" alt="Pitch Image">
            <div class="card-body">
                <h5 class="card-title">@pitch.Title</h5>
                <p class="card-text">@pitch.Address</p>
            </div>
        </div>
    }
</div>